{
  "name": "@mbao01/ui",
  "private": false,
  "version": "0.5.2",
  "type": "module",
  "author": "Ayomide Bakare",
  "license": "MIT",
  "description": "A fully ready-to-consume component library available in different frontend frameworks",
  "keywords": [
    "react",
    "components",
    "ui",
    "library"
  ],
  "main": "./src/index.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "src",
    "dist/types"
  ],
  "bugs": "https://github.com/mbao01/mbao01/issues",
  "homepage": "https://ui.ayomidebakare.site",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbao01/mbao01.git"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "clean": "pnpx rimraf node_modules",
    "dev": "storybook dev -p 6008",
    "build": "tsc && vite build",
    "build-storybook": "storybook build -o ../../docs/storybook/ui",
    "postbuild-storybook": "cp -R ../../docs/storybook/ui/* ../../docs/storybook/ && rm -rf ../../docs/storybook/ui",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "prod": "pnpx http-server ../../docs/storybook --port 6008",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:visual": "test-storybook --url http://127.0.0.1:6008",
    "test:visual:coverage": "test-storybook --coverage --url http://127.0.0.1:6008",
    "test:visual:ci": "test-storybook --ci --verbose --url http://127.0.0.1:6008",
    "test:visual:watch": "test-storybook --watch --url http://127.0.0.1:6008",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mbao01/common": "workspace:^",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-links": "^9.0.16",
    "@storybook/addon-onboarding": "^9.0.16",
    "@storybook/addon-themes": "^9.0.16",
    "@storybook/react-vite": "^9.0.16",
    "@storybook/test-runner": "^0.23.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-playwright": "^2.1.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.16",
    "globals": "^16.3.0",
    "jest-image-snapshot": "^6.5.1",
    "jsdom": "^26.1.0",
    "path": "^0.12.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "storybook": "^9.0.16",
    "storybook-addon-remix-react-router": "^5.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react-router-dom": "7"
  }
}
