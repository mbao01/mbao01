{
  "name": "@mbao01/ui",
  "private": false,
  "version": "0.1.43",
  "type": "module",
  "author": "Ayomide Bakare",
  "license": "MIT",
  "description": "A fully ready-to-consume component library available in different frontend frameworks",
  "keywords": [
    "react",
    "components",
    "ui",
    "library"
  ],
  "main": "./src/index.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "src",
    "dist/types"
  ],
  "bugs": "https://github.com/mbao01/mbao01/issues",
  "homepage": "https://ui.ayomidebakare.site",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbao01/mbao01.git"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "clean": "pnpx rimraf node_modules",
    "dev": "storybook dev -p 6008",
    "build": "tsc && vite build",
    "build-storybook": "storybook build -o ../../docs/storybook/ui",
    "postbuild-storybook": "cp -R ../../docs/storybook/ui/* ../../docs/storybook/ && rm -rf ../../docs/storybook/ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "prod": "pnpx http-server ../../docs/storybook --port 6008",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:visual": "test-storybook --url http://127.0.0.1:6008",
    "test:visual:coverage": "test-storybook --coverage",
    "test:visual:ci": "test-storybook --ci --verbose --url http://127.0.0.1:6008",
    "test:visual:watch": "test-storybook --watch",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mbao01/common": "workspace:^",
    "@radix-ui/react-icons": "^1.3.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@storybook/addon-a11y": "^8.3.4",
    "@storybook/addon-coverage": "^1.0.4",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-onboarding": "^8.3.4",
    "@storybook/addon-themes": "^8.3.4",
    "@storybook/addon-viewport": "^8.3.4",
    "@storybook/blocks": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-vite": "^8.3.4",
    "@storybook/test": "^8.3.4",
    "@storybook/test-runner": "^0.19.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "axe-playwright": "^2.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.9.0",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^25.0.1",
    "path": "^0.12.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "storybook": "^8.3.4",
    "storybook-addon-react-router-v6": "^2.0.15",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.2",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "react-router-dom": "^6.22.0"
  }
}
