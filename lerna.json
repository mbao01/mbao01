{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": ["releases/**"],
      "message": "chore(release): prepare %s"
    },
    "publish": {
      "allowBranch": ["main"],
      "message": "chore(release): publish %s"
    }
  }
}
